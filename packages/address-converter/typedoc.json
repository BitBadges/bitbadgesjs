{
  "entryPoints": ["./src"],  // Specifies the input files to be processed.
  "exclude": ["**/*.spec.ts"],  // Exclude test files or other unwanted files.
  "out": "./docs",  // Specifies the location the documentation should be written to.

  "includeVersion": true,  // Append the package version to the project name.

  "excludeExternals": false,  // Prevent externally imported types and symbols from being documented.
  // "excludeNotExported": true,  // Prevent symbols that are not exported from being documented.
  // "excludePrivate": true,  // Prevent private members from being documented.

  "hideGenerator": true,  // Do not print the Typedoc link at the end of the documentation.

  // "moduleResolution": "node",  // Use the node module resolution strategy.
  // "module": "CommonJS",  // Specify module code generation.

  "tsconfig": "./tsconfig.json",  // Use a specified tsconfig.json for the TypeScript compiler options.

  "categorizeByGroup": true,  // Enables categorization by reflection kind.

  // "defaultCategory": "Balances",  // Default category used when a reflection doesn't have a specified category.

  // "listInvalidSymbolLinks": true,  // Emit a list of broken symbol [[navigation]] links.


  "externalPattern": ["./node_modules/**"],  // Specifies the pattern for files that should be considered being external.

  // "stripInternal": true,  // Remove symbols that are marked with the @internal tag.

  "searchInComments": true,

  "navigation": {
    "includeCategories": true,
    "includeGroups": true,
  },
}
