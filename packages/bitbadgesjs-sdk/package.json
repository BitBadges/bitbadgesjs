{
  "name": "bitbadgesjs-sdk",
  "description": "SDK for BitBadges development",
  "version": "0.4.10",
  "license": "MIT",
  "eslintIgnore": [
    "src/proto/**/*.ts"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "alias": "tsc-alias -p tsconfig.build.json && tsc-alias -p tsconfig-esm.build.json",
    "build": "rm -rf dist && tsc --build tsconfig.build.json && tsc --build tsconfig-esm.build.json && npm run alias && npm run fixup && npm run dep-check",
    "clean": "tsc --build tsconfig.build.json --clean  && shx rm -rf coverage *.log junit.xml dist && jest --clearCache",
    "fixup": "./scripts/fixup.sh",
    "test": "jest ./src/**/*.spec.ts",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/unit",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --reporters='jest-junit'",
    "coverage": "jest --coverage",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "start": "node dist/index.js",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "prepare": "ts-patch install && typia patch",
    "dep-check": "madge --circular ./src/index.ts --warning --ts-config ./tsconfig.json --exclude 'api-indexer/docs/interfaces.ts|interfaces/badges/*'"
  },
  "devDependencies": {
    "@babel/core": "^7.24.8",
    "@babel/preset-typescript": "^7.23.3",
    "@bufbuild/buf": "^1.28.0",
    "@bufbuild/protoc-gen-es": "^1.4.2",
    "@types/crypto-js": "^4.1.2",
    "@types/elliptic": "^6.4.18",
    "@types/jest": "^27.5.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "fs-extra": "^11.2.0",
    "husky": "^7.0.4",
    "jest": "^29.7.0",
    "jest-junit": "^13.0.0",
    "js-yaml": "^4.1.0",
    "lerna": "^5.4.3",
    "markdownlint-cli": "^0.31.1",
    "merkletreejs": "^0.3.11",
    "path": "^0.12.7",
    "prettier": "^3.2.5",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.2",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^1.1.8",
    "ts-patch": "^3.2.1",
    "tsconfig-paths": "^3.11.0",
    "tsoa": "^6.1.5",
    "tsup": "^8.1.0",
    "typedoc": "^0.26.5",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^1.7.2",
    "@keplr-wallet/cosmos": "^0.12.133",
    "@metamask/eth-sig-util": "^7.0.2",
    "@solana/web3.js": "^1.95.2",
    "@trevormil/bbs-signatures": "^1.0.1",
    "axios": "^1.6.2",
    "bech32": "^2.0.0",
    "bip322-js": "^2.0.0",
    "bitbadgesjs-sdk": "^0.3.192",
    "blockin": "^1.3.11",
    "bs58": "^5.0.0",
    "crypto-addr-codec": "^0.1.7",
    "elliptic": "^6.5.6",
    "ethers": "^6.13.2",
    "madge": "^8.0.0",
    "next-auth": "^5.0.0-beta.19",
    "tweetnacl": "^1.0.3",
    "typia": "^6.9.0",
    "web3-validator": "^2.0.6"
  }
}
