{
  "name": "bitbadgesjs-sdk",
  "description": "SDK for BitBadges development",
  "version": "0.3.20",
  "license": "MIT",
  "eslintIgnore": [
    "src/proto/**/*.ts"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json && tsc-alias",
    "build:watch": "tsc --build -w tsconfig.build.json",
    "clean": "tsc --build tsconfig.build.json --clean  && shx rm -rf coverage *.log junit.xml dist && jest --clearCache",
    "test": "jest ./src/**/*.spec.ts",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/unit",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --reporters='jest-junit'",
    "coverage": "jest --coverage",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "start": "node dist/index.js",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "@bufbuild/buf": "^1.28.0",
    "@bufbuild/protoc-gen-es": "^1.4.2",
    "@types/crypto-js": "^4.1.2",
    "@types/jest": "^27.5.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^7.0.4",
    "jest": "^29.7.0",
    "jest-junit": "^13.0.0",
    "js-yaml": "^4.1.0",
    "lerna": "^5.4.3",
    "markdownlint-cli": "^0.31.1",
    "prettier": "^3.2.5",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "tsoa": "^6.1.5",
    "typedoc": "^0.25.13",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^1.7.2",
    "@cosmjs/cosmwasm-stargate": "^0.32.2",
    "@cosmjs/crypto": "^0.32.2",
    "@cosmjs/stargate": "^0.32.2",
    "@digitalbazaar/bbs-2023-cryptosuite": "^1.1.1",
    "@digitalbazaar/bls12-381-multikey": "^1.2.0",
    "@digitalbazaar/data-integrity": "^2.1.0",
    "@digitalbazaar/vc": "^6.2.0",
    "@trevormil/bbs-signatures": "^1.0.1",
    "axios": "^1.6.2",
    "bech32": "^2.0.0",
    "blockin": "^1.3.8",
    "blockin-btc-driver": "^1.1.1",
    "blockin-cosmos-driver": "^1.1.2",
    "blockin-eth-driver": "^1.1.1",
    "blockin-sol-driver": "^1.1.2",
    "bs58": "^5.0.0",
    "crypto-addr-codec": "^0.1.7",
    "ethers": "^5.7.0",
    "joi": "^17.10.1",
    "merkletreejs": "^0.3.11",
    "mongoose": "^8.0.3",
    "nano": "^10.1.2",
    "protoc-gen-ts": "^0.8.7",
    "qs": "^6.12.1"
  }
